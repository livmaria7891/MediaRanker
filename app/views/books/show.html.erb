<h1>Title: <%= @book.title %></h1>
<h4>Author: <%= @book.author %></h4>
<h4>Description: <%= @book.description %></h4>
<h4>Rank: <%= @book.rank %></h4>

<%= button_to("Upvote", {action: "upvote", id: @book.id}, method: :patch, :class => "small button") %>
<%= button_to "Edit", {action: "edit", id: @book[:id] }, method: :get, :class => "button" %>
<%= button_to "Delete Book", {action: "destroy", id: @book[:id] }, method: :delete, :class => " alert button", data: { confirm: "Are you sure?"} %>
<%= button_to("View All Books", books_path, :method => :get, :class => "button") %>
<%= button_to("View All Media", medias_index_path, :method => :get, :class => "button") %>
